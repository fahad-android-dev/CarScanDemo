<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDatePicker" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@color/color_grey</item>
        <item name="colorControlActivated">@color/txt_color_black</item>
        <item name="android:textColorPrimary">@color/txt_color_black</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="fontBold">
        <item name="android:fontFamily">@font/font_bold</item>
    </style>

    <style name="fontRegular">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="fontMedium">
        <item name="android:fontFamily">@font/font_medium</item>
    </style>


    <!-- todo START Text styles -->
    <style name="TextStyleStartRegular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/txt_color_primary</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextStyleStartMedium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/txt_color_primary</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="TextStyleStartBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/txt_color_primary</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>



    <!-- todo CENTER Text styles -->
    <style name="TextStyleCenterRegular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/txt_color_primary</item>
    </style>

    <style name="TextStyleCenterMedium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/txt_color_primary</item>
    </style>


    <style name="TextStyleCenterBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/txt_color_primary</item>
    </style>


    <!-- todo END Text styles -->
    <style name="TextStyleEndRegular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/txt_color_primary</item>
    </style>

    <style name="TextStyleEndMedium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/txt_color_primary</item>
    </style>



    <style name="TextStyleEndBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/txt_color_primary</item>
    </style>



    <!--Button Styles-->

    <style name="CommonButtonStyle">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:textColor">@color/txt_color_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:paddingBottom">@dimen/_1sdp</item>
    </style>




</resources>